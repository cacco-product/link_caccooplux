            <button class="button ma_memo_cancel">${Resource.msg('oplux.popup.cancel', 'opluxAdmin', null)}</button>
            <button class="button ma_memo_update">${Resource.msg('oplux.popup.update', 'opluxAdmin', null)}</button>
        </div>
    </div>
</div>